= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message

  .field.form-group
    = f.label :content
    = f.text_area :content, class: "form-control w-50"

  .field
    = f.label :photo
    = f.file_field :photo

  .actions
    = f.submit
