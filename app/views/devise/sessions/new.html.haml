
%html
  %head
    %link#bootstrap-css{href: "//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css", rel: "stylesheet"}/
    %script{src: "//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"}
    %script{src: "//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"}
    / ---- Include the above in your HEAD tag --------
    %title My Awesome Login Page
    %link{crossorigin: "anonymous", href: "https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css", integrity: "sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO", rel: "stylesheet"}/
    %script{src: "https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"}
    %link{crossorigin: "anonymous", href: "https://use.fontawesome.com/releases/v5.6.1/css/all.css", integrity: "sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP", rel: "stylesheet"}/
  
  %h1.text-center Sign in
  %br/
  %br/
  %br/
  %br/
  %body
    .container.h-100
      .d-flex.justify-content-center.h-100
        .user_card
          .d-flex.justify-content-center
            .brand_logo_container
              %img.brand_logo{alt: "Logo", src: "https://i.pinimg.com/736x/a1/9f/99/a19f992f7c6721978cc969e65def079b.jpg"}/
          .d-flex.justify-content-center.form_container
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            %form
              .input-group.mb-3
                .input-group-append
                  %span.input-group-text
                    %i.fas.fa-user
                = f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email"
                %br/
              .input-group.mb-2
                .input-group-append
                  %span.input-group-text
                    %i.fas.fa-key
                = f.password_field :password, class: "form-control", autocomplete: "current-password"
                %br/
              .form-group
                .custom-control.custom-checkbox
                  = f.check_box :remember_me, class: "custom-control-input", id: "customControlInline"
                  -# %input#customControlInline.custom-control-input{type: "checkbox"}/
                  %label.custom-control-label{for: "customControlInline"} Remember me
              .d-flex.justify-content-center.mt-3.login_container
                = f.submit "Log in", class: "btn login_btn"
          .mt-4
            .d-flex.justify-content-center.links
              Don't have an account?
              = link_to "Sign up", new_registration_path(resource_name), class: "ml-2"
            .d-flex.justify-content-center.links
              = link_to "Forgot your password?", new_password_path(resource_name)
            .d-flex.justify-content-center.links
              = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name)